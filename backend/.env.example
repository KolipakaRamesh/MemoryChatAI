# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./data/memorychat.db

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma

# Redis (optional for MVP, use in-memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-in-production

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Embedding Service
EMBEDDING_MODEL=text-embedding-ada-002

# Rate Limiting
RATE_LIMIT_FREE=10/minute
RATE_LIMIT_PRO=100/minute
RATE_LIMIT_ENTERPRISE=1000/minute

# Token Limits
MAX_CONTEXT_WINDOW=4096
RESPONSE_BUFFER_TOKENS=1000
SUMMARIZATION_THRESHOLD_TOKENS=2000

# Memory Configuration
MAX_SHORT_TERM_MESSAGES=20
MAX_SEMANTIC_RESULTS=5
SEMANTIC_SIMILARITY_THRESHOLD=0.7
MAX_FEEDBACK_CORRECTIONS=3

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
